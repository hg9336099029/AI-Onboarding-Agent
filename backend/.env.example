# Environment Variables Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
DATABASE_URL=

# Groq (for LLM inference - FREE)
GROQ_API_KEY=your_groq_api_key_here
LLM_MODEL=llama-3.1-70b-versatile
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# Embeddings (choose provider)
EMBEDDING_PROVIDER=huggingface  # "huggingface" (free) or "openai" (paid)
EMBEDDING_MODEL=all-MiniLM-L6-v2  # HuggingFace: all-MiniLM-L6-v2, OpenAI: text-embedding-ada-002
OPENAI_API_KEY=your_openai_api_key_here

# Repository Settings
REPO_CLONE_PATH=./data/repositories
MAX_FILE_SIZE_MB=10

# Retrieval Settings
TOP_K_RESULTS=10
MAX_FLOW_DEPTH=5
